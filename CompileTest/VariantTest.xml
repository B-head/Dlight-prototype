<?xml version="1.0" encoding="utf-8" ?>
<compile-test xmlns="CompileTestSchema.xsd">
  <case>
    <code>
      var a:Int32
      stdout := a
    </code>
    <output>0</output>
  </case>

  <case>
    <code>
      stdout := abc
    </code>
    <error key="undefined-identifier"/>
  </case>

  <case>
    <code>
      var a:Int32
      a := 10
      stdout := a
    </code>
    <output>10</output>
  </case>

  <case>
    <code>
      var a:Int32
      a(10)
      stdout := a
    </code>
    <output>10</output>
  </case>

  <case>
    <code>
      var a:Int32
      a(10)
      stdout := a()
    </code>
    <output>10</output>
  </case>

  <case>
    <code>
      var a
      a := 10
      stdout := a
    </code>
    <error key="require-type"/>
  </case>

  <case>
    <code>
      var a:Int32 := 70
      stdout := a
    </code>
    <output>70</output>
  </case>

  <case>
    <code>
      var a:Integ45 := 40
      stdout := a
    </code>
    <error key="undefined-identifier"/>
    <error key="require-type"/>
  </case>

  <case>
    <code>
      var a := 40
      stdout := a
    </code>
    <output>40</output>
  </case>

  <case>
    <code>
      var a(10)
      stdout := a
    </code>
    <output>10</output>
  </case>

  <case>
    <code>
      let a := 40
      stdout := a
    </code>
    <output>40</output>
  </case>

  <case>
    <code>
      let a := 40
      a := 600
      stdout := a
    </code>
    <error key="not-mutable"/>
  </case>

  <case>
    <code>
      50 =: var a =: var b
      stdout := a * b
    </code>
    <output>2500</output>
  </case>

  <case>
    <code>
      50 =: var a := var b
      stdout := a * b
    </code>
    <error key="not-collide-assign"/>
    <error key="require-type"/>
  </case>
  
  <case>
    <code>
      var e:Double := 25.5
      var f:Int32 := e
      stdout := f
    </code>
    <output>25</output>
  </case>

  <case ignore="true">
    <code>
      var e:Double := 25.5
      stdout := Int32(e)
    </code>
    <output>25</output>
  </case>
</compile-test>
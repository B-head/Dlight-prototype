<compile-test xmlns="CompileTestSchema.xsd">
  <case>
    <code>
      if true :: stdout := 10
    </code>
    <output>10</output>
  </case>

  <case>
    <code>
      stdout := if true :: 10
    </code>
    <output>10</output>
  </case>

  <case>
    <code>
      if true :: if true :: 10;; =: stdout 
    </code>
    <output>10</output>
  </case>

  <case>
    <code>
      <![CDATA[
      routine foo(a:Boolean){
        if a {
          stdout := 10
        } else {
          stdout := 20
        }
      }
      foo(true)
      foo(false)
      ]]>
    </code>
    <output>10 20</output>
  </case>

  <case>
    <code>
      <![CDATA[
      routine foo(a:Boolean) :: if a :: 10 else 20
      
      stdout := foo(true)
      stdout := foo(false)
      ]]>
    </code>
    <output>10 20</output>
  </case>

  <case>
    <code>
      <![CDATA[
      routine foo(a:Boolean, b:Boolean){
        return if a :: if b :: 10 else 40 else if b :: 20 else 30
      }
      stdout := foo(true, true)
      stdout := foo(true, false)
      stdout := foo(false, true)
      stdout := foo(false, false)
      ]]>
    </code>
    <output>10 40 20 30</output>
  </case>

  <case>
    <code>
      <![CDATA[]]>
    </code>
    <output></output>
  </case>
</compile-test>

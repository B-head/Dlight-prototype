<compile-test xmlns="CompileTestSchema.xsd">
  <case>
    <code>
      <![CDATA[
      var a := ConsoleColor|.Red
      stdout := a
      ]]>
    </code>
    <output>Red</output>
  </case>
  
  <case>
    <code>
      <![CDATA[
      5 := 5
      ]]>
    </code>
    <error key="not-mutable"/>
  </case>

  <case>
    <code>
      <![CDATA[
      rout foo(a:Int32, b:Int32) :: a + b =: stdout
      
      foo[10] := 20
      ]]>
    </code>
    <output>30</output>
  </case>

  <case>
    <code>
      <![CDATA[
      rout foo(a:Int32, b:Int32) :: return a + b
      
      stdout := foo := 10, 20
      ]]>
    </code>
    <output>30</output>
  </case>

  <case>
    <code>
      <![CDATA[
      rout foo(a:Int32, b:Int32) { 
        return a + b
      }
      
      stdout := foo := 10, 20
      ]]>
    </code>
    <output>30</output>
  </case>

  <case>
    <code>
      <![CDATA[
      (10 + 20).ToString =: stdout
      ]]>
    </code>
    <output>30</output>
  </case>

  <case>
    <code>
      <![CDATA[
      rout foo(a:Int32) { 
	      return a + 20
      }
      
      10.foo =: stdout
      ]]>
    </code>
    <output>30</output>
  </case>
  
  <case>
    <code>
      <![CDATA[
      var e:Double := 25.5
      stdout := e.Int32
      ]]>
    </code>
    <output>25</output>
  </case>
  
  <case>
    <code>
      <![CDATA[
      var a := a + 10
      stdout := a
      ]]>
    </code>
    <output>10</output>
  </case>

  <case>
    <code>
      <![CDATA[
      routine foo(a:Int32) :: if a > 0 :: foo(a - 1) + 5 else 1
      
      stdout := foo(10)
      ]]>
    </code>
    <output>51</output>
  </case>
  
  <case>
    <code>
      <![CDATA[
      rout foo(a:Int32) { 
	      return 20
      }
      
      foo
      (10) =: stdout
      ]]>
    </code>
    <output>10</output>
  </case>

  <case>
    <code>
      <![CDATA[
      rout foo(a:Int32) { 
	      return 20
      }
      
      foo\
      (10) =: stdout
      ]]>
    </code>
    <output>20</output>
  </case>

  <case ignore="true">
    <code>
      <![CDATA[
      rout foo(a:String) { 
	      a =: stdout
	      return "world"
      }
      
      foo"hello" =: stdout
      ]]>
    </code>
    <output>hello world</output>
  </case>

  <case>
    <code>
      <![CDATA[
      rout foo a:String :: a =: stdout
      
      foo := "hello"
      ]]>
    </code>
    <output>hello</output>
  </case>
</compile-test>
